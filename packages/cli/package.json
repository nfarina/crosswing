{
  "name": "@crosswing/cli",
  "type": "module",
  "version": "0.0.2",
  "description": "Crosswing development process manager.",
  "author": "nfarina@gmail.com",
  "bin": {
    "crosswing": "./bin/crosswing.js"
  },
  "scripts": {
    "dev": "cd client; npm run vite --port 2750",
    "serve": "vite-node server/server.ts",
    "build:client": "cd client; vite build",
    "build:server": "cd server; tsc -p tsconfig.dist.json",
    "build": "npm run build:client && npm run build:server",
    "analyze": "cd client; npx vite-bundle-visualizer",
    "prepack": "npm run build"
  },
  "dependencies": {
    "minimist": "^1.2.8",
    "pidusage": "^3.0.2",
    "ps-tree": "^1.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "babel-plugin-styled-components": "^2.1.4",
    "crosswing": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "styled-components": "^6.1.1",
    "vite": "^5.0.4",
    "vite-plugin-svgr": "^4.2.0"
  },
  "files": [
    "**/*.ts?(x)",
    "bin/",
    "!client/",
    "client/dist",
    "server/dist"
  ]
}