{
  "name": "cyber",
  "type": "module",
  "private": true,
  "version": "0.0.0",
  "author": "nfarina@gmail.com",
  "bin": {
    "cyber": "./bin/cyber"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun packages/manager/server/server.ts",
    "test-all": "bun prettier && bun circular && bun typecheck && bun test",
    "prettier": "prettier --check 'src/**/*.ts?(x)'",
    "prettier:fix": "bun prettier -- --write",
    "circular": "madge --extensions ts,tsx --circular src",
    "typecheck": "tsc",
    "storybook": "storybook dev --ci -p 2702",
    "build-storybook": "storybook build",
    "clean:node_modules": "rm -rf node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^7.4.5",
    "@storybook/addon-essentials": "^7.4.5",
    "@storybook/addon-interactions": "^7.4.5",
    "@storybook/addon-links": "^7.4.5",
    "@storybook/blocks": "^7.4.5",
    "@storybook/react": "^7.4.5",
    "@storybook/react-vite": "^7.4.5",
    "@storybook/testing-library": "^0.2.1",
    "@types/debug": "^4.1.9",
    "@types/minimist": "^1.2.3",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.8",
    "@types/react-is": "^18.2.2",
    "@types/react-transition-group": "^4.4.7",
    "bun-types": "^1.0.3",
    "prettier": "^3.0.3",
    "prettier-check": "^2.0.0",
    "storybook": "^7.4.5",
    "timemachine": "^0.3.2",
    "typescript": "^5.2.2"
  }
}