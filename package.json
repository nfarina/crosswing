{
  "name": "crosswing",
  "type": "module",
  "private": true,
  "version": "0.0.0",
  "author": "nfarina@gmail.com",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "packages/cli/bin/crosswing",
    "test-all": "bun prettier && bun circular && bun typecheck && bun test",
    "check-imports": "bunx npm-check",
    "prettier": "prettier --check 'packages/**/*.ts?(x)'",
    "prettier:fix": "bun prettier -- --write",
    "circular": "bunx madge --extensions ts,tsx --circular packages",
    "typecheck": "tsc",
    "storybook": "storybook dev --ci -p 2702",
    "build-storybook": "storybook build",
    "clean:node_modules": "rm -rf node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^7.6.1",
    "@storybook/addon-essentials": "^7.6.1",
    "@storybook/react": "^7.6.1",
    "@storybook/react-vite": "^7.6.1",
    "@types/debug": "^4.1.12",
    "@types/minimist": "^1.2.5",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@types/react-is": "^18.2.4",
    "@types/react-transition-group": "^4.4.9",
    "@vitejs/plugin-react": "^4.2.0",
    "bun-types": "^1.0.14",
    "prettier": "^3.1.0",
    "storybook": "^7.6.1",
    "timemachine": "^0.3.2",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "vite-plugin-svgr": "^4.2.0"
  }
}