{
  "name": "cyber",
  "type": "module",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "workspaces": [
    "packages/*"
  ],
  "author": "nfarina@gmail.com",
  "scripts": {
    "dev": "cd packages/manager; vite-node src/server/server.ts -- ../../tasks.json",
    "test": "pnpm run prettier && pnpm run circular && pnpm run typecheck && pnpm run vitest",
    "vitest": "vitest --run",
    "test-ui": "vitest --ui --coverage --open=false --api.port 2703",
    "prettier": "prettier --check 'packages/*/src/**/*.ts?(x)'",
    "prettier:fix": "yarn prettier --write",
    "circular": "madge --extensions ts,tsx --circular packages",
    "typecheck": "tsc",
    "coverage": "vitest run --coverage",
    "storybook": "storybook dev --ci -p 2702",
    "build-storybook": "storybook build",
    "upgrade": "pnpm upgrade -ir --latest",
    "node": "vite-node"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^7.2.1",
    "@storybook/addon-essentials": "^7.2.1",
    "@storybook/addon-interactions": "^7.2.1",
    "@storybook/addon-links": "^7.2.1",
    "@storybook/blocks": "^7.2.1",
    "@storybook/react": "^7.2.1",
    "@storybook/react-vite": "^7.2.1",
    "@storybook/testing-library": "^0.2.0",
    "@types/animejs": "^3.1.7",
    "@types/debug": "^4.1.8",
    "@types/minimist": "^1.2.2",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@types/react-is": "^18.2.1",
    "@types/react-transition-group": "^4.4.6",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-v8": "^0.34.1",
    "@vitest/ui": "^0.34.1",
    "babel-plugin-styled-components": "^2.1.4",
    "prettier": "^3.0.1",
    "prettier-check": "^2.0.0",
    "storybook": "^7.2.1",
    "timemachine": "^0.3.2",
    "typescript": "^5.1.6",
    "vite": "^4.4.8",
    "vite-plugin-svgr": "^3.2.0",
    "vitest": "^0.34.1"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "vite-node": "^0.34.1"
  }
}