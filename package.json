{
  "name": "crosswing",
  "type": "module",
  "private": true,
  "version": "0.0.0",
  "author": "nfarina@gmail.com",
  "bin": {
    "crosswing": "./bin/crosswing"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun packages/manager/server/server.ts",
    "test-all": "bun prettier && bun circular && bun typecheck && bun test",
    "check-imports": "bunx npm-check",
    "prettier": "prettier --check 'packages/**/*.ts?(x)'",
    "prettier:fix": "bun prettier -- --write",
    "circular": "bunx madge --extensions ts,tsx --circular packages",
    "typecheck": "tsc",
    "storybook": "storybook dev --ci -p 2702",
    "build-storybook": "storybook build",
    "clean:node_modules": "rm -rf node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "@storybook/react": "^7.5.3",
    "@storybook/react-vite": "^7.5.3",
    "@types/debug": "^4.1.12",
    "@types/minimist": "^1.2.5",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/react-is": "^18.2.4",
    "@types/react-transition-group": "^4.4.9",
    "bun-types": "^1.0.11",
    "prettier": "^3.1.0",
    "storybook": "^7.5.3",
    "timemachine": "^0.3.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.9"
  }
}